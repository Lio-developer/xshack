---
const { number, action } = Astro.props;
---

<header class="w-full h-1/3 grid grid-cols-1 grid-rows-[1fr_2fr]">
  <div class="flex justify-between items-center px-10 text-lime-500 text-sm">
    <p>STEP</p>
    <p>{number}</p>
  </div>
  <div class="grid place-content-center">
    <p class="text-6xl font-extrabold text-center text-light">{action}</p>
  </div>
</header>
